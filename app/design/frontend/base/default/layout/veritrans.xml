<?xml version="1.0"?>   
<layout version="0.1.0">
    <veritrans_processing_redirect>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
    
        <reference name="content">
            <block type="veritrans/processing" name="veritrans.processing.redirect" template="veritrans/redirect.phtml"/>
        </reference>
    </veritrans_processing_redirect>

    <veritrans_processing_cancel>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>

        <reference name="content">
            <block type="veritrans/processing" name="veritrans.processing.cancel" template="veritrans/cancel.phtml"/>
        </reference>
    </veritrans_processing_cancel>
</layout>
