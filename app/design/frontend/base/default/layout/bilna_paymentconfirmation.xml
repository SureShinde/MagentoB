<?xml version="1.0"?>   
<layout version="0.1.0">
    <paymentconfirm_index_index>
        <reference name="head">
            <action method="addCss"><stylesheet>css/jquery-uii.css</stylesheet></action>
        </reference>
        <reference name="root">   
            <action method="setTemplate"><template>page/1column.phtml</template></action>   
        </reference>
        
        <reference name="content">   
            <block type="paymentconfirm/index" name="paymentconfirm_index" template="paymentconfirmation/index.phtml"/>   
        </reference>
    </paymentconfirm_index_index>
    
    <paymentconfirm_index_process>
        <reference name="root">   
            <action method="setTemplate"><template>page/1column.phtml</template></action>   
        </reference>
        
        <reference name="content">   
            <block type="paymentconfirm/process" name="paymentconfirm_process" template="paymentconfirmation/thankyou.phtml"/>   
        </reference>
    </paymentconfirm_index_process>
</layout>
