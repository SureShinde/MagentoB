    $j("ul#nav li.parent a, .level-hover").hover(
            function() {
                $j('#nav-perlengkapan-rumah ul#nav li.parent').removeClass('over');
                $j('#nav-perlengkapan-rumah ul#nav li.parent a').removeClass('over');
                $j(this).parent().addClass('over');
