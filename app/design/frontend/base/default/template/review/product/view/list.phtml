<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
    <?php $idx_review = 0; ?>
        <h2><?php echo $this->__('Product Reviews') ?></h2>
        <ol>
        <?php foreach ($_items as $_review):?>
			
			<?php $class_review = ''; ?>
			<?php if( $idx_review == 0 ): ?>
				<?php $class_review = 'first'; ?>
			<?php endif; ?>
			<?php if( ($idx_review == 1) or ($idx_review == (count($_items) - 1 )) ): ?>
				<?php $class_review = 'last'; ?>
			<?php endif; ?>
			<?php if( $idx_review <= 2 ) : ?>
            <li class="<?php echo $class_review; ?>">
				<div class="name">
					<span><?php echo $this->escapeHtml($_review->getNickname()) ?></span>
				</div>
				<div class="review-star">
					<?php $_votes = $_review->getRatingVotes(); ?>
					<?php if (count($_votes)): ?>
					<table class="ratings-table">
						<col width="1" />
						<col />
						<tbody>
							<?php foreach ($_votes as $_vote): ?>
							<tr>
								<th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></th>
								<td>
									<div class="rating-box">
										<div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
									</div>
								</td>
							</tr>
							<?php endforeach; ?>
						</tbody>
					</table>
					<?php endif; ?>
				</div>
				<div class="review-detail">
					<h4 class="review-title"><?php echo $this->escapeHtml($_review->getTitle()) ?></h4>
					<p class="review-description"><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
				</div>
				<div class="review-date">
					<small class="date"><?php echo $this->formatDate($_review->getCreatedAt()) ?></small>
				</div>
				<div class="clear"></div>
            </li>
            <?php endif; ?>
			<?php if( $idx_review > 2 ) : ?>
				<div id="more_comments" style="display:none">
		            <li class="<?php echo $class_review; ?>">
						<div class="name">
							<span><?php echo $this->escapeHtml($_review->getNickname()) ?></span>
						</div>
						<div class="review-star">
							<?php $_votes = $_review->getRatingVotes(); ?>
							<?php if (count($_votes)): ?>
							<table class="ratings-table">
								<col width="1" />
								<col />
								<tbody>
									<?php foreach ($_votes as $_vote): ?>
									<tr>
										<th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></th>
										<td>
											<div class="rating-box">
												<div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
											</div>
										</td>
									</tr>
									<?php endforeach; ?>
								</tbody>
							</table>
							<?php endif; ?>
						</div>
						<div class="review-detail">
							<h4 class="review-title"><?php echo $this->escapeHtml($_review->getTitle()) ?></h4>
							<p class="review-description"><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
						</div>
						<div class="review-date">
							<small class="date"><?php echo $this->formatDate($_review->getCreatedAt()) ?></small>
						</div>
						<div class="clear"></div>
		            </li>
				</div>

			<?php endif; ?>
			<?php $idx_review = $idx_review + 1; ?>
        <?php endforeach; ?>
        </ol>
		<a href="#more_comments" class="review-show-all"><?php echo $this->__('Show all reviews') ?></a>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>
</div>
<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery('a.smooth-scroll').on('click',function (e) {
			e.preventDefault();
			var target = this.hash,
				targetx = jQuery(target);
			jQuery('html, body').stop().animate({
				'scrollTop': targetx.offset().top
			}, 500, 'swing', function () {
				window.location.hash = target;
			});
		});
	});
</script>