                dataLayer.push({'customer': JSON.stringify(response.data.customer)});
                dataLayer.push( {'order': JSON.stringify(response.data.order)} );
                dataLayer.push({'event': 'salesConversionEvent'});
                
            }else{
                return false;
            }
        },
        error: function() {
            return false;
        }
    });
});
</script>