/**
 * Brads switcher
 *
 * @see Belvg_Brands_Block_List_Switch
 */
?>
<?php if(Mage::helper('brands')->isSwitcherActive() && $this->getBrandsCount()): ?>
<?php $_title = $this->escapeHtml($this->__(Mage::helper('brands')->getPageTitle())) ?>
<div class="block">
    <div class="block-title">
        <strong><span><?php echo $_title ?></span></strong>
    </div>
    <div class="block-content">
        <select name="brands_switch" title="<?php echo $_title ?>" onchange="this.value.length?setLocation(this.value):''" style="width: 95%; margin: 3px">
            <option value="">---</option>
        <?php foreach ($this->getLoadedBrandsCollection() as $_brand): ?>
            <option value="<?php echo $_brand->getUrl() ?>"<?php if($_brand->getId() ==$this->getCurrentBrandId()): ?> selected="selected"<?php endif; ?>>
                <?php echo $this->escapeHtml($_brand->getTitle()) ?>
            </option>
        <?php endforeach; ?>
        </select>
    </div>
</div>
<?php endif; ?>
