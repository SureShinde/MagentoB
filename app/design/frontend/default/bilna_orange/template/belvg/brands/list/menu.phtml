/**
 * Brads switcher
 *
 * @see Belvg_Brands_Block_List_Menu
 */
?>
<?php $items = $this->getItems() ?>
<?php $active = $this->getActive() ?>
<?php $outermostItemClass = $this->getOutermostItemClass() ?>
<?php if ($count = $items->count()): ?>
    <li class="<?php echo $outermostItemClass ?> <?php echo $active ?>">
        <a class="<?php echo $outermostItemClass ?>" href="<?php echo $this->getUrl(Mage::helper('brands')->getRoute()) ?>"><span><?php echo $this->escapeHtml($this->__(Mage::helper('brands')->getPageTitle())) ?></span></a>
        <ul class="level0">
            <?php $i = 0; foreach ($items as $item): ?>
                <li class="level1 nav-1-<?php echo ($i+1)?><?php echo ($i == 0)?' first':''?> <?php echo ($i == $count - 1)?'last':''?>">
                    <a href="<?php echo $item->getUrl()?>">
                        <span><?php echo $this->escapeHtml($item->getTitle())?></span>
                    </a>
                </li>
            <?php $i++; endforeach ?>
        </ul>
    </li>
<?php endif; ?>
