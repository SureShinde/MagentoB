        <script>
            // Define list for Universal Analytics
            var last_breadcumbs_categorysearch, last_breadcumbs_category = "";
            var list = "browsing";
            last_breadcumbs_categorysearch = $j('.page-title').length;
            last_breadcumbs_category = $j('.page-title.category-title').length;
            if ((last_breadcumbs_category == 1) && (last_breadcumbs_categorysearch == 1)) {
                list = "browsing";
            }
            else if ((last_breadcumbs_category == 0) && (last_breadcumbs_categorysearch == 1)) {
                list = "search results";
            }

            function ecommerceAddToCart(name, sku, price, price_ematic, link, imageUrl) {
                dataLayer.push({
                  'event': 'addToCart',
                  'ecommerce': {
                    'currencyCode': 'IDR',
                    'add': {                                // 'add' actionFieldObject measures.
                      'actionField': {'list': list},
                      'products': [{                        //  adding a product to a shopping cart.
                        'name': name,
                        'id': sku,
                        'price': price,
                        'quantity': 1,
                        'brandName': 'brand name',
                        'imageUrl': imageUrl,
                        'link': link
                       }]
                    }
                  }
                });

                // ematics cart - retrieve items from cart
                var temp_cart = [];
                var temp_item = "";
                var index_addeditem = -999;

                for (var itr=0; itr < <?php echo $itemQty ?>; itr++) {
                    temp_item = jQuery(".mini-cart span#ematiccart").eq(itr).text();
                    temp_cart[itr] = temp_item.split("|");
                    if (temp_item.indexOf(sku) > -1) {
                      index_addeditem = itr;
                    }
                }

                // ematics cart - prepare for logging
                products = [
                    <?php for($i=0; $i<$itemQty; $i++) {
                        echo "{'name' : temp_cart[".$i."][0],";
                        echo "'id' : temp_cart[".$i."][1],";
                        echo "'price' : temp_cart[".$i."][3],";
                        echo "'quantity' : temp_cart[".$i."][4],";
                        echo "'brandName' : 'brand name',";
                        echo "'imageUrl' : temp_cart[".$i."][5],";
                        echo "'link' : temp_cart[".$i."][6]}";if($i != $itemQty-1) {echo ",";}
                    } 
                    ?>
                ];

                // ematics added item
                if (index_addeditem != -999) {    // same item exist in cart
                    products[index_addeditem].quantity = parseInt(products[index_addeditem].quantity) + 1;
                }
                else {    // no same item
                    products.push({
                      'id': sku,
                      'price': price_ematic,
                      'quantity': 1,
                      'name': name,
                      'brandName': 'brand name',
                      'imageUrl': imageUrl,
                      'link': link
                    });
                }

                // ematics track items in cart to enable pre-abandonded cart overlays
                ematics("log", "product", "cart", products);
            }

            function ecommerceProductClick(name,sku,price) {
                //alert("NEW_HURRY"+list);
                dataLayer.push({
                'event': 'productClick',
                'ecommerce': {
                  'click': {
                    'actionField': {'list': list},      // Optional list property.
                    'products': [{
                      'name': name,                      // Name or ID is required.
                      'id': sku,
                      'category' : '<?php echo $category; ?>',
                      'price': price
                     }]
                   }
                 }
