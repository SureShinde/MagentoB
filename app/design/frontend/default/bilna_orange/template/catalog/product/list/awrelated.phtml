<?php if($this->getEnabled() && count($this->getRelatedProductsCollection())): ?>
<div class="aw-box aw-base-mini aw-mini-related-items block">
    <hr/>
    <div class="head">
        <span><?php echo $this->__('You Might Like This') ?></span>
    </div>
