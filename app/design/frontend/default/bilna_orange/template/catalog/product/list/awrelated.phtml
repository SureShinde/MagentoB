        <ol class="products-grid">
        <?php foreach($this->getRelatedProductsCollection() as $_item): ?>
        <li class="<?php if($_item->isComposite() || !$_item->isSaleable()): ?> super-products<?php endif; ?>">
			<div class="top_thumb_list_product">
                     <a id="collection-price-<?php echo $_item->getId(); ?>" t="javascript:;" class="link-wishlist addToCollectionLink" onclick="showAddToCollectionDialog()" data-brand-name="<?php echo $_item->getAttributeText('brand'); ?>" data-image="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(320 , 320); ?>" data-product-name="<?php echo $this->stripTags($_item->getName(), null, true); ?>" data-price="<?php echo $_core_helper->currency($_item->getFinalPrice(), true, false); ?>" data-oldprice="<?php echo $_core_helper->currency($_item->getPrice(), true, false); ?>" data-id="<?php echo $_item->getId(); ?>"><i class="fa fa-heart"></i></a>
				<div class="product-images">
					<a href="<?php echo $_item->getProductUrl() ?>"><img class="lazy" data-src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(152) ?>" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
				</div>
            </div>
            <div class="product-info-wrapper">
				<div class="product-details">
					<div class="product-name-wrap">
						<a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a>
					</div>
					<?php echo $this->getPriceHtml($_item, true); ?>
				</div>
				<?php echo $this->getReviewsSummaryHtml($_item, false, true)?>
			</div>
			<div class="bottom_thumb_list_product">
				
				<?php if($_item->isSaleable()): ?>
                    <?php
                    // if cross border is disabled and the item is cross border, don't display the add to cart button
                    if (Mage::helper('bilna_crossborder')->isCrossBorderEnabled() == false && 
                        Mage::helper('bilna_crossborder')->isCrossBorder($_item)): 
                    ?>
                        <p class="availability out-of-stock"><a href="javascript:"><?php echo $this->__('Segera tersedia') ?></a></p>
                    <?php
                    else:
                    ?>
    					<?php if($_item->getTypeId() != 'simple'):?>
                        <a class="link-cart-special" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->stripTags($_item->getName(), null, true) ?>"><i class="fa fa-cart-plus"></i><?php echo $this->__('Tambah ke troli') ?></a>
                        <?php else:?>
                        <button type="button buynow_awrelated" title="<?php echo $this->__('Tambah ke troli') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><i class="fa fa-cart-plus"></i> <?php echo $this->__('Tambah ke troli') ?></span></span></button>
                        <?php endif; ?>
                    <?php endif; ?>
				<?php else: ?>
					<p class="availability out-of-stock"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->__('Kabari bila tersedia') ?></a></p>
