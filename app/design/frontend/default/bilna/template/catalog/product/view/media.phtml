/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
	$onsale_class = '-left';
	if (count($this->getGalleryImages()) > 0):
		$onsale_class = '';
	endif;
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<div class="onsale-product-container<?php echo $onsale_class?>">
   <?php echo Mage::helper('onsale')->getProductLabelHtml($_product, 265); ?>
	<p class="product-image product-image-zoom">
	    <?php
			$zoom_large_img = "zoomImage: '".$this->helper('catalog/image')->init($_product, 'image')."'";
	        $_img = '<img id="image" data-cloudzoom="'.$zoom_large_img.'" class="cloudzoom" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize( 320, 340).'" height="340" width="320" />';
	        echo $_helper->productAttribute($_product, $_img, 'image');
	    ?>
	</p>
	<script type="text/javascript">
		$j(document).ready(function(){
			CloudZoom.quickStart();
		});
	</script>   
</div>
<?php else: ?>
<div class="onsale-product-container<?php echo $onsale_class?>">
   <?php echo Mage::helper('onsale')->getProductLabelHtml($_product, 265); ?>
	<p class="product-image">
	    <?php
	        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(265).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
	        echo $_helper->productAttribute($_product, $_img, 'image');
	    ?>
	</p>
</div>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <div class="more-views-slider">
    <?php foreach ($this->getGalleryImages() as $_image): ?>
		<div class="slide">
			<img class="cloudzoom-gallery" data-cloudzoom = "useZoom: '.cloudzoom', image: '<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize( 320, 340); ?>', zoomImage: '<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>' " src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(56); ?>" width="56" height="56" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
		</div>
    <?php endforeach; ?>
    </div>
</div>
<?php if (count($this->getGalleryImages()) > 4): ?>
<script>
	$j(document).ready(function(){
		$j('.more-views-slider').bxSlider({
			mode: 'vertical',
			slideWidth: 300,
			minSlides: 4,
			slideMargin: 10,
			pager: false,
			infiniteLoop: false
		});
	});
</script>
<?php endif; ?>
<div class="clear"></div>
<?php endif; ?>
