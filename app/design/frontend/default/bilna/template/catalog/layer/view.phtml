                <?php if($_filter->getItemsCount()): ?>
                    <dt class="<?php echo strtolower($this->__($_filter->getName())) ?>"><?php echo $this->__($_filter->getName()) ?></dt>
                    <dd>
                    	<div class="scrollbar"><div class="track"><div class="thumb"><div class="end"></div></div></div></div>
                    	<?php echo $_filter->getHtml() ?>
                    	<?php if($this->__($_filter->getName())=='Category'):?>
	                    	<ol class="added-menu">
		                    	<li><a href="#" class="link-bestseller "><?php echo $this->__('Best Seller') ?></a></li>
		                    	<li><a href="#" class="link-whatsnew"><?php echo $this->__('Whats New') ?></a></li>
		                    	<li><a href="#" class="link-onsale"><?php echo $this->__('On Sale!') ?></a></li>
	                    	</ol>
	                    <?php endif;?>
                    </dd>
                    
                <?php endif; ?>
                <?php endforeach; ?>
            </dl>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
        <?php endif; ?>
    </div>
    <div class="demo">
	    <p><label for="amount"><?php echo $this->__('Price') ?></label></p>
	    <div id="slider-range"></div>
	    <input type="text" id="amount" readonly="true" />
    </div>
    <script type="text/javascript">
    $j(window).load(function(){
	    function showProducts(minPrice, maxPrice) {
	    $j("#products li").hide().filter(function() {
	        var price = parseInt($j(this).data("price"), 10);
	        return price >= minPrice && price <= maxPrice;
	    }).show();
	}
	
	$j(function() {
	    var options = {
	        range: true,
	        min: 0,
	        max: 500,
	        values: [50, 300],
	        slide: function(event, ui) {
	            var min = ui.values[0],
	                max = ui.values[1];
	
	            $j("#amount").val("Rp. " + min + " to Rp. " + max);
	            showProducts(min, max);
	        }
	    }, min, max;
	
	    $j("#slider-range").slider(options);
	
	    min = $j("#slider-range").slider("values", 0);
	    max = $j("#slider-range").slider("values", 1);
	
	    $j("#amount").val("Rp. " + min + " to Rp. " + max);
	
	    showProducts(min, max);
	});
	});
    </script>
    <div class="left-banner-category"><?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('left_banner_category')->toHtml() ?></div>
</div>
<?php endif; ?>