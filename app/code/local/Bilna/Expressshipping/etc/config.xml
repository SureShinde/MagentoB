<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Bilna_Expressshipping>
            <version>0.1.2</version>
        </Bilna_Expressshipping>
    </modules>

    <global>
        <resources>
            <expressshipping_setup>
                <setup>
                    <module>Bilna_Expressshipping</module>
                </setup>
                
                <connection>
                    <use>core_setup</use>
                </connection>
            </expressshipping_setup>
            
            <expressshipping_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </expressshipping_write>
            
            <expressshipping_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </expressshipping_read>
        </resources>
        <models>
            <expressshipping>
                <class>Bilna_Expressshipping_Model</class>
            </expressshipping>
        </models>
        <events>
            <sales_order_place_before>
                <observers>
                    <sales_order_express_increment_count>
                        <type>singleton</type>
                        <class>Bilna_Expressshipping_Model_Observer</class>
                        <method>salesOrderIncrementCount</method>
                    </sales_order_express_increment_count>
                </observers>
            </sales_order_place_before>
            <sales_quote_add_item>
                <observers>
                    <express_quote_add_item>
                        <type>singleton</type>
                        <class>Bilna_Expressshipping_Model_Observer</class>
                        <method>expressQuoteAddItem</method>
                    </express_quote_add_item>
                </observers>
            </sales_quote_add_item>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <express_convert_to_order_item>
                        <type>singleton</type>
                        <class>Bilna_Expressshipping_Model_Observer</class>
                        <method>salesQuoteConvertToOrderItem</method>
                    </express_convert_to_order_item>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <order_cancel_after>
                <observers>
                    <express_cancel_order>
                        <type>singleton</type>
                        <class>Bilna_Expressshipping_Model_Observer</class>
                        <method>expressSalesCancel</method>
                    </express_cancel_order>
                </observers>
            </order_cancel_after>
        </events>
        <helpers>
            <bilna_expressshipping>
                <class>Bilna_Expressshipping_Helper</class>
            </bilna_expressshipping>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                        <children>
                                            <bilna_expressshipping>
                                                <title>Bilna - All</title>
                                            </bilna_expressshipping>
                                            <bilna_expressshipping_so_limit>
                                                <title>Bilna - All</title>
                                            </bilna_expressshipping_so_limit>
                                        </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <bilna_expressshipping>
            <status>
                <enabled>0</enabled>
            </status>
            <orderlimit>
                <limit>0</limit>
            </orderlimit>
        </bilna_expressshipping>
    </default>
</config>
