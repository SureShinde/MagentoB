<?xml version="1.0"?>
<config>
    <modules>
        <Bilna_Vtdirect>
            <version>0.1.0</version><!-- declare module's version information for database updates -->
        </Bilna_Vtdirect>
    </modules>
    
    <frontend>
        <routers>
            <vtdirect>
                <use>standard</use>
                <args>
                    <module>Bilna_Vtdirect</module>
                    <frontName>vtdirect</frontName>
                </args>
            </vtdirect>
        </routers>
        
        <layout>
            <updates>
                <vtdirect>
                    <file>vtdirect.xml</file>
                </vtdirect>
            </updates>
        </layout>
    </frontend>
    
    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <check_no>
                    <to_order_payment>*</to_order_payment>
                </check_no>
                
                <check_date>
                    <to_order_payment>*</to_order_payment>
                </check_date>
            </sales_convert_quote_payment>
    	</fieldsets>
        
        <helpers>
            <vtdirect>
                <class>Bilna_Vtdirect_Helper</class>
            </vtdirect>
        </helpers>
        
        <blocks><!-- IMPORTANT: if you use your own namespace (i.e. CompanyName) you also have to declare blocks group for new module. See topic: http://www.magentocommerce.com/boards/viewthread/22416/#t102732 -->
            <vtdirect>
                <class>Bilna_Vtdirect_Block</class>
            </vtdirect>
        </blocks>
        
        <models><!-- declare model group for new module -->
            <vtdirect><!-- model group alias to be used in Mage::getModel('newmodule/...') -->
                <class>Bilna_Vtdirect_Model</class><!-- base class name for the model group -->
                <resourceModel>vtdirect_mysql4</resourceModel>
            </vtdirect>
            
            <vtdirect_mysql4>
                <class>Bilna_Vtdirect_Model_Mysql4</class>
                <entities>
                    <vtdirect>
                        <table>veritrans_vtdirect</table>
                    </vtdirect>
                </entities>
            </vtdirect_mysql4>
        </models>
     
        <resources><!-- declare resource setup for new module -->
            <vtdirect_setup><!-- resource identifier -->
                <setup><!-- specify that this resource is a setup resource and used for upgrades -->
                    <module>Bilna_Vtdirect</module><!-- which module to look for install/upgrade files in -->
                </setup>
    
                <connection><!-- specify database connection for this resource -->
                    <use>core_setup</use><!-- do not create new connection, use predefined core setup connection -->
                </connection>
            </vtdirect_setup>
            
            <vtdirect_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vtdirect_write>
            
            <vtdirect_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vtdirect_read>
        </resources>
    </global>
    
    <default><!-- declare default configuration values for this module -->
        <payment><!-- 'payment' configuration section (tab) -->
            <vtdirect><!-- 'newmodule' configuration group (fieldset) -->
                <active>0</active><!-- by default this payment method is inactive -->
                <model>vtdirect/vtdirect</model><!-- model to handle logic for this payment method -->
                <order_status>pending</order_status><!-- order status for new orders paid by this payment method -->
                <title>Credit Card (VT-Direct by Veritrans)</title><!-- default title for payment checkout page and order view page -->
                <cctypes>VI,MC</cctypes>
                <payment_action>authorize</payment_action>
                <allowspecific>0</allowspecific>
            </vtdirect>
        </payment>
    </default>
</config>
