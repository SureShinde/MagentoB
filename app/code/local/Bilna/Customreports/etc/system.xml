<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <bilna translate="label">
            <label>Bilna Extensions</label>
        </bilna>
    </tabs>
    
    <sections>
        <bilna_customreports translate="label">
            <label>Custom Report</label>
            <tab>bilna</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>            
            <sort_order>10</sort_order>
            <groups>
                <installmentreport translate="label">
                    <label>Installment Report Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <payment_allow translate="label" module="customreports">
                            <label>Payment Method Allow</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>customreports/system_config_installmentreport_paymentallow</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </payment_allow>
                        
                        <status_allow translate="label" module="customreports">
                            <label>Status Allow</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </status_allow>
                    </fields>
                </installmentreport>
            </groups>
        </bilna_customreports>
    </sections>
</config>
