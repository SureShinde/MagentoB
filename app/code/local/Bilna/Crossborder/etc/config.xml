<?xml version="1.0"?>
<config>
    <modules>
        <Bilna_Crossborder>
            <version>0.1.0</version>
        </Bilna_Crossborder>
    </modules>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <Bilna_Crossborder before="Mage_Checkout">Bilna_Crossborder</Bilna_Crossborder>
                    </modules>
                </args>
            </checkout>
        </routers>
    </frontend>
    <global>
        <resources>
            <crossborder_setup>
                <setup>
                    <module>Bilna_Crossborder</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </crossborder_setup>
            <crossborder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </crossborder_write>
            <crossborder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </crossborder_read>
        </resources>
        <events>
            <sales_quote_add_item>
                <observers>
                    <crossborder_quote_add_item>
                        <type>singleton</type>
                        <class>Bilna_Crossborder_Model_Observer</class>
                        <method>crossborderQuoteAddItem</method>
                    </crossborder_quote_add_item>
                </observers>
            </sales_quote_add_item>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <sales_order_quote_convert_to_order_item>
                        <type>singleton</type>
                        <class>Bilna_Crossborder_Model_Observer</class>
                        <method>salesQuoteConvertToOrderItem</method>
                    </sales_order_quote_convert_to_order_item>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <sales_order_save_before>
                <observers>
                    <crossborder_validate>
                        <type>singleton</type>
                        <class>Bilna_Crossborder_Model_CrossBorder</class>
                        <method>validateSaveOrder</method>
                    </crossborder_validate>
                </observers>
            </sales_order_save_before>
        </events>
        <helpers>
            <bilna_crossborder>
                <class>Bilna_Crossborder_Helper</class>
            </bilna_crossborder>
        </helpers>
        <models>
            <bilna_crossborder>
                <class>Bilna_Crossborder_Model</class>
            </bilna_crossborder>
        </models>
        
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                        <children>
                                            <bilna_crossborder>
                                                <title>Bilna - All</title>
                                            </bilna_crossborder>
                                        </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
