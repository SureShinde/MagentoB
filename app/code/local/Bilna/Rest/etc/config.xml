<config>
    <modules>
        <Bilna_Rest>
            <version>0.9.0</version>
        </Bilna_Rest>
    </modules>
    <global>
        <helpers>
            <bilna_rest>
                <class>Bilna_Rest_Helper</class>
            </bilna_rest>
	</helpers>
        <models>
            <bilna_rest>
                <class>Bilna_Rest_Model</class>
            </bilna_rest>
        </models>
        <resources>
            <bilna_rest_setup>
                <setup>
                    <module>Bilna_Rest</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bilna_rest_setup>
        </resources>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <logan translate="title">
                            <title>Bilna Logan</title>
                            <sort_order>100</sort_order>
                            <children>
                                <frontend translate="title">
                                    <title>Frontend</title>
                                    <sort_order>10</sort_order>
                                </frontend>
                                <generate>
                                    <title>Generate Data</title>
                                    <sort_order>20</sort_order>
                                </generate>
                            </children>
                        </logan>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <generate>
            <images>
                <thumbnail>75</thumbnail>
                <vertical>150</vertical>
                <horizontal>150</horizontal>
                <detail>265</detail>
            </images>
        </generate>
    </default>
</config>
