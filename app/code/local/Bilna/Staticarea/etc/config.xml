            <staticarea>
                <class>Bilna_Staticarea_Model</class>
                <resourceModel>staticarea_mysql4</resourceModel>
            </staticarea>
        
            <staticarea_mysql4>
                <class>Bilna_Staticarea_Model_Mysql4</class>
                <entities>
                    <manage>
                        <table>bilna_staticarea</table>
                    </manage>
                
