		    <args>
                <module>Bilna_Staticarea</module>
                <frontName>staticarea</frontName>
            </args>
      </staticarea>
    </routers>
   </admin>
  
    <adminhtml>
        <layout>
            <updates>
                <staticarea>
                    <file>staticarea.xml</file>
		        </staticarea>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <staticarea>
                    <file>staticarea.xml</file>
                </staticarea>
            </updates>
        </layout>
