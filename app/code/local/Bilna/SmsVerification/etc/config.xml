<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Bilna_SmsVerification>
            <version>1.0.0</version>
        </Bilna_SmsVerification>
    </modules>
    <global>
        <helpers>
            <smsverification>
                <class>Bilna_SmsVerification_Helper</class>
            </smsverification>
        </helpers>

        <resources>
            <smsverification_setup>
                <setup>
                    <module>Bilna_SmsVerification</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </smsverification_setup>

            <smsverification_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </smsverification_write>

            <smsverification_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </smsverification_read>
        </resources>

    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <bilna translate="title" module="smsverification">
                                            <title>Bilna</title>
                                            <children>
                                                <smsverificationbackend translate="title">
                                                    <title>SMS Verification Config</title>
                                                </smsverificationbackend>
                                            </children>
                                        </bilna>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
